{% extends 'base.html.twig' %}

{% block javascripts %}
{{ parent() }}
{% endblock %}


{% block title %}N°{{ courrierId.bordereau }}{% endblock %}



{% set statutsTermine = false %}
{% for statut in statutsCourrier %}
{% if statut.statut.statutCode == 5 or statut.statut.statutCode == 9 %} {% set statutsTermine = true %} {% endif %}
{% endfor %}

{% set showUpdateButton = statutsCourrier|length >= 7 or statutsTermine ? false : true %}

{% block body %}

{% if showUpdateButton and 'ROLE_GESTION' in app.user.roles %}
    <div id="boxContent" class="flex-col absolute  rounded-lg p-2 right-28 top-36 text-[#140A82] font-bold shadow-md bg-white">
        {% for statut in statutsRestants %}
            <div class="p-3 m-1">
            <a class="  hover:text-[#25BA00] transition-colors duration-300" href="{{ path('app_statut_add', { courrierId: courrierId, statutId: statut.id }) }}">{{statut.etat }}</a>
            </div>
        {% endfor %}
    </div>
{% endif %}

<main class="w-[95%] m-auto">

    <div class="flex justify-between right-0 my-10" data-controller="statut">
        <div>
            <h1 class="text-xl font-bold italic text-[#25BA00] mb-2">Le suivi n° {{ courrierId.bordereau }} en detail</h1>
        </div>
        <div class="flex gap-x-2">
            {% if showUpdateButton and 'ROLE_GESTION' in app.user.roles %}<button id="button"
                class="text-white bg-green-500 hover:bg-green-700 p-2 rounded whitespace-nowrap">Mettre à jour le statut</button>
            {% endif %}
            <a class="text-white bg-red-500 hover:bg-red-700 p-2 rounded whitespace-nowrap"
                href="{{ path('app_accueil', {recherche: recherche ?? null, dateMin: dateMin ?? null, dateMax: dateMax ?? null}) }}">Retour</a>
        </div>
    </div>
    <section>
            {% for statut in statutsCourrier %}
            <div {{stimulus_action('signature', 'method', 'click')}} class="block p-6 bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 mb-4">
                <div class="flex justify-between">
                    <h5 class="mb-2 text-xl font-bold tracking-tight text-[#FF5E1A]">{{ statut.date|date_modify("+1 hour")|date('d-m-Y H:i') }}</h5>
                    <p class="font-normal text-[#25BA00]">{{statut.statut ? statut.statut.etat }}</p>
                </div>
                <div class="flex justify-between">
                    <input type="hidden" id="id" value={{ courrierId }}></input>
                    <p>
                        {{ statut.statut ? statut.statut.etat }} {% if statut.facteur != null %}{{'par ' ~
                        statut.facteur.nom|title }} {% if 'ROLE_INACTIF' in statut.facteur.roles and 'ROLE_GESTION' in
                        app.user.roles %}(facteur inactif){% endif %}{% endif %}
                    </p>
                    
                    {% if statut.statut.statutCode >= 3 and 'ROLE_GESTION' in app.user.roles %}
                        <a class="text-white bg-red-500 hover:bg-red-700 p-1 rounded whitespace-nowrap"
                        href="{{ path('app_delete_statut', { courrierId: statut.courrier.id, statutId: statut.id }) }}">Supprimer</a>
                    {% endif %}
                </div>
                {% if statut.statut.etat == "distribué" and showSignature == false %}
                    <div data-controller="signature" data-id="{{ courrierId }}" id="upload-test">
                        <input type="file" class="border-2  border-[#8682ba] rounded-lg shadow-md" data-signature-target="fileInput" accept=".jpg,.jpeg,.png,image/jpeg,image/png" > 
                        <button data-signature-target="editButton" class="text-white bg-green-500 hover:bg-green-700 p-2 rounded whitespace-nowrap">Sauvegarder</button>
                    </div>
                    {# <div data-controller="signature">
                        <button id="signature" class="text-white bg-[#25BA00] hover:bg-green-600 p-1 rounded whitespace-nowrap" style="display:block">Signer</button>
                    </div>
                    <div data-controller="signature" style="display:none;" id="canvastest">
                        <canvas data-signature-target="canvas" id="c" width="400" height="200" style="border: 1px solid black;"></canvas>
                    </div>
                    <div data-controller="signature" data-id={{ courrierId }} id="canvastests" style="display:none">
                        <button id="clear-canvas" class="text-white bg-red-500 hover:bg-red-700 p-1 mt-5 mr-5 rounded whitespace-nowrap">Effacer</button>
                        <button id="save-canvas" class="mt-5 mb-5 text-white rounded bg-green-500 hover:bg-green-800 p-1">Sauvegarder</button>
                    </div>  #}
                
                {% endif %}
                
            </div>
        {% endfor %}

    </section>
    <div class="flex justify-between my-10">
        {% if procuration != null %}
            <p>Distribué avec procuration à : <span class="text-gray-500">{{procuration|title}}</span></p>
        {% endif %}
        {% if showSignature %}
            <div class="w-[30%]" >
                <img id="uploaded-image" src="/download/{{ courrierId }}" alt="Uploaded Image">
                {# <p class="text-xl text-gray-500">Signature :</p>
                <div data-controller="signatures" data-id={{ courrierId }}>
                    <div id="cacher" style="display:block">
                        <img class="border-2 border-gray-200 shadow-md" src="{{ signature }}" width="90%" alt="Signature" style="display:block" id="imageCanvas">
                    </div>
                    <div style="display:flex">
                    <a class="text-white bg-red-500 hover:bg-red-700 p-1 mt-5 mr-5 rounded whitespace-nowrap" id="tests" href="{{ path('app_delete_signature', {id: courrierId}) }}">Supprimer</a>
                    
                    <button id="editerSignatureButton" style="display:block" class="text-white bg-blue-500 hover:bg-blue-700 p-1 mt-5 mr-5 rounded">Modifier</button>
                    <button id="clear-canva" style="display:none"class="text-white bg-red-500 hover:bg-red-700 p-1 mt-5 mb-5 mr-5 rounded ">Effacer</button>
                    <button id="save-canva" style="display:none" class="mt-5 mb-5 text-white rounded bg-green-500 hover:bg-green-800 p-1" >Sauvegarder</buutton>
                    </div>
                    <div style="display:none" id="affichercanva">
                        <canvas id="signatureCanvas" width="500" height="300" class="border-gray-200 shadow-md" style=" border: 1px solid "></canvas>
                    </div>
                </div> #}
        </div>
        {% endif %}
    </div>
</main>

{% endblock %}