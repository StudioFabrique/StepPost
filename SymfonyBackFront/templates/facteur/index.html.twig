{% extends 'base.html.twig' %}

{% block title %}Gestion des facteurs{% endblock %}

{% block body %}
<main class="w-[95%] m-auto">
    <h1 class=" mb-4 text-2xl font-semibold text-[#140A82]">Liste et gestion des facteurs</h1>
    <section class="flex justify-between items-center">
        <form class="flex " action="" method="get">
            <div class="mb-3 xl:w-50">
                <div class=" input-group relative flex flex-wrap items-stretch w-full mb-4 ">
                    <label for="Recherche" class="text-black opacity-50 italic"> Recherche par nom ou email</label>
                    <input name="recherche" type="search" class="form-control relative flex-auto min-w-0 block w-full px-3 py-1.5 
                        text-base font-normal text-gray-700 bg-white bg-clip-padding border 
                        border-solid border-gray-300 rounded transition ease-in-out m-0 
                        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                        placeholder="" aria-label="" aria-describedby="button-addon2">
                </div>
            </div>
        </form>
            <div>
                <a class="text-white bg-[#24A640] p-2 rounded" href="{{ path('app_newFacteur') }}">Créer un facteur</a>
                <a class="text-white bg-[#F24E1E] p-2 rounded" href="{{ path('app_accueil') }}">Retour</a>
            </div>
    </section>
    <section class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 table-fixed">
            <thead class="text-xs text-white uppercase bg-[#140A82]">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        email
                    </th>
                    <th scope="col" class="px-6 py-3">
                        nom
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Date création du facteur
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Date mise à jour du facteur
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Statut du compte
                    </th>
                    <th>
                        Modifier
                    </th>
                    <th>
                        Supprimer
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for facteur in facteurs %}
                {% set role = 'ROLE_FACTEURINACTIF' in facteur.roles ? 'non activé' : 'activé'  %}
                <tr class="bg-white border-b00">
                    <td class="px-6 py-4">
                        {{facteur.email }}
                    </td>
                    <td class="px-6 py-4">
                        {{facteur.nom }}
                    </td>
                    <td class="px-6 py-4">
                        {{facteur.createdAt | date('d-m-Y H:i') }}
                    </td>
                    <td class="px-6 py-4">
                        {{facteur.updatedAt | date('d-m-Y H:i') }}
                    </td>
                    <td class="px-6 py-4">
                        {{ role }}
                    </td>
                    <td class="px-6 py-4">
                        <a class="text-blue-800 bg-blue-100 p-2 rounded" href="{{ path('app_editFacteur', {id: facteur.id}) }}">
                            Modifier
                        </a>
                    </td>
                    <td class="px-6 py-4">
                        <a class="text-red-600 bg-blue-100 p-2 rounded" href="{{ path('app_deleteFacteur', {id: facteur.id}) }}">
                            Supprimer
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
    <div class="flex justify-center m-4">
        {% set multi10 = '1' %}
        {% set letterNb = -1 %}
        {% for i in range(1, nbFacteursTotal|length) %}
            {% set multi10 = multi10 ~ 0 %}
            {% set letterNb = letterNb + 1 %}
        {% endfor %}
        {% set maxPages = nbFacteursTotal <= 10 ? nbFacteursTotal / 10 : ((nbFacteursTotal % multi10)|slice(0, letterNb)) + 1 %}
        {% if maxPages > 1 %}
            <a href="http://localhost:8000/facteurs/?page=1" class="pt-3 text-white bg-[#140A82] rounded-lg px-2">1</a>
            <p>{{ knp_pagination_render(courriers) }} </p>
            <a href={{"http://localhost:8000/facteurs/?page=" ~ (maxPages)|trans}} class="pt-3 text-white bg-[#140A82] rounded-lg px-2">{{maxPages}} </a>
        {% endif %}
    </div>
    {{ facteurs|length == 0 ? 'Aucun facteurs'}}
</main>
{% endblock %}