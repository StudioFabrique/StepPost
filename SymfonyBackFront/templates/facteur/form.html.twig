{% extends 'base.html.twig' %}

{% block javascripts %}
{{ parent() }}
{% endblock %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div>
{% if isAdding == true %}

    <form class="w-[95%] m-auto" data-controller="facteur" data-mode="add">
        <h1 class=" mt-4 text-xl font-semibold text-[#140A82]">{{ title }}</h1>
        <div class="flex justify-between items-center">
            <div></div>
            <a class="text-white bg-[#F24E1E] p-2 rounded" href="{{ path('app_facteur') }}">Retour</a>
        </div>
        <p> Les champs obligatoires sont marqu√©s par un * </p>
            <label for="email">Email</label>
            <input id="email" name="email" type="text" class = 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4'>
            <label for="nom">Nom</label>
            <input id="nom" name="nom" type="text" class = 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4'>
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class = 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4'>
            <button id="facteur_submit" class="text-white bg-[#24A640] p-2 rounded">Sauvegarder</button>
    </form>
{% elseif isEdit == true %}
    <form class="w-[95%] m-auto" data-controller="facteur" data-id={{ facteurId }} data-mode="editPassword">
        <h1 class=" mb-4 text-xl font-semibold text-[#140A82]">{{ title }}</h1>
        <div class="flex justify-between items-center">
            <div></div>
            <a class="text-white bg-[#F24E1E] p-2 rounded" href="{{ path('app_facteur') }}">Retour</a>
        </div>
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class = 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4'>
            <button id="facteur_submit" class="text-white bg-[#24A640] p-2 rounded">Sauvegarder</button>
    </form>
{% else %}
    <div class="w-[95%] m-auto">
        <h1 class=" mb-4 text-xl font-semibold text-[#140A82]">{{ title }}</h1>
        <div class="flex justify-between items-center">
            <div></div>
            <a class="text-white bg-[#F24E1E] p-2 rounded" href="{{ path('app_facteur') }}">Retour</a>
        </div>
        {{ form(form) }}
    </div>
{% endif %}
</div>
{% endblock %}
