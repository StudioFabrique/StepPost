{% extends 'base.html.twig' %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block title %}
	Statistiques Facteur
{% endblock %}

{% block javascript %}
	{{ parent() }}
	<script src="/libs/chart.js/chart.min.js"></script>
{% endblock %}

{% block body %}
	<main class="w-[95%] m-auto">
		<div class="flex justify-between">
			<div></div>
			<div>
				<a data-turbo="false" class="text-white bg-red-500 hover:bg-red-700 p-2 rounded" href="{{ path('app_statistiques') }}">Retour</a>
			</div>
		</div>
		<div class="flex justify-center">
			<div class="w-[55%] p-10">
				<p class="text-center m-5 text-xl my-10">
					Nombre de courriers gérés par <span class="text-[#140A82]">{{ facteur.nom|title }}</span>
				</p>
				<p>{{ render_chart(chart1) }}</p>
			</div>
			<div class="max-w-sm p-10">
				<p class="text-center m-5 text-xl my-10">
					Statuts actuels des courriers gérés par <span class="text-[#140A82]">{{ facteur.nom|title }}</span>
				</p>
				<p>{{ render_chart(chart2) }}</p>
			</div>
		</div>
	</main>
{% endblock %}
