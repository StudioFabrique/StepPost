{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}

<main class="w-[90%] m-auto">
    <h1 style="font-size: 20pt;padding-bottom: 2%;"><b>Liste et gestion des courriers</b></h1>
    <section class="flex justify-between items-center">
        <form class="flex " action="" method="get">
            <div class="mb-3 xl:w-50">
                <div class=" input-group relative flex flex-wrap items-stretch w-full mb-4 ">
                    <label for="Recherche" class="text-black opacity-50 italic"> Recherche par nom ou bordereau</label>
                    <input name="toId" type="search" class="form-control relative flex-auto min-w-0 block w-full px-3 py-1.5 
                        text-base font-normal text-gray-700 bg-white bg-clip-padding border 
                        border-solid border-gray-300 rounded transition ease-in-out m-0 
                        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                        placeholder="nom ou numéro bordereau" aria-label="nom ou numéro bordereau" aria-describedby="button-addon2">
                </div>
            </div>
        </form>
        <div>
            <a class="text-white bg-[#F24E1E] p-2 rounded" href="{{ path('app_client') }}">Voir les
                expéditeurs</a>
            <a class="text-white bg-[#F24E1E] p-2 rounded" href="{{ path('app_raisonSociale') }}">Gérer les raisons
                sociales</a>
            <a class="text-white bg-[#24A640] p-2 rounded" href="{{ path('app_statistique') }}">Voir les
                statistiques</a>
        </div>
    </section>
    <section class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 table-fixed">
            <thead class="text-xs text-white uppercase bg-[#140A82]">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Date <a href="{{ path('app_accueil', {order: order} ) }}">{{ order == "ASC" ? 'décroissant' : 'croissant'}}</a>
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Type
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Bordereau
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Civilité
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Nom
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Prénom
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Adresse
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Complément
                    </th>
                    <th scope="col" class="px-6 py-3">
                        CP
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Ville
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Téléphone
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Statut
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for courrier in courriers %}
                <tr class="bg-white border-b00">
                    <td class="px-6 py-4">
                        {{courrier.date | date('d-m-Y H:i') }}
                    </td>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900itespace-nowrap">
                        {{courrier.type == "1" ? "Lettre" }} {{courrier.type == "2" ? "Colis" }}
                    </th>
                    <td class="px-6 py-4">
                        {{courrier.bordereau}}
                    </td>
                    <td class="px-6 py-4">
                        {{courrier.civilite }}
                    </td>
                    <td class="px-6 py-4">
                        {{courrier.nom}}
                    </td>
                    <td class="px-6 py-4">
                        {{courrier.prenom ? courrier.prenom : "Non defini"}}
                    </td>
                    <td class="px-6 py-4">
                        {{courrier.adresse}}
                    </td>
                    <td class="px-6 py-4">
                        {{courrier.complement ? courrier.complement : "Non defini"}}
                    </td>
                    <td class="px-6 py-4">
                        {{courrier.codePostal}}
                    </td>
                    <td class="px-6 py-4">
                        {{courrier.ville}}
                    </td>
                    <td class="px-6 py-4">
                        {{courrier.telephone ? courrier.telephone : "Non defini"}}
                    </td>
                    <td class="px-6 py-4">
                        {{ courrier.statut }}
                        <hr style="border-width: 2px;">
                        <a style="color: blue;"
                            href="{{ path('app_suiviId', {id: courrier.courrier}) }}">
                            détails
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
</main>
{% endblock %}