
{% block javascripts %}
<script>
  function RemoveBanner() {
    const banner = document.getElementById('expediteurBanner');
    sessionStorage.setItem('isBannerRemoved', 'true');
    banner.remove();
  }
  function verifyAndRemoveBanner() {
    if(sessionStorage.getItem('isBannerRemoved') != 'true') RemoveBanner();
  }
</script>
{% endblock %}

