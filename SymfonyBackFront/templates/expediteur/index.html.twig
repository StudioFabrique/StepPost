{% extends 'base.html.twig' %}

{% block title %}Liste des expéditeurs{% endblock %}

{% block body %}



<main class="w-[90%] m-auto">
    <h1 style="font-size: 20pt;padding-bottom: 2%;"><b>Liste et gestion des expéditeurs</b></h1>
    {% if isSearch != null ? false : true %}
    {% if expediteursInactifs|length > 0 %}
    
    <div class="bg-blue-900 rounded-xl">
        <p class="p-2 text-white">Des utilisateurs sont enregistrés mais ne sont pas encore actifs</p>
        <details>
            <summary class="mx-20 my-2 p-1 text-white list-none hover:cursor-pointer rounded max-w-fit border-red-700 border-2 text-center">Voir les utilisateurs inactifs</summary>
            <section id="inactifSection" class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-left text-gray-500 table-fixed">
                    <thead class="text-xs text-white uppercase bg-[#140A82]">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                Raison client
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Email
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Nom / Entreprise
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Prenom / Service
                            </th>
                            <th scope="col" class="px-6 py-3">
                                role
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Modifier
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Supprimer
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Activer
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for expediteur in expediteursInactifs %}
                        {% set role = 'ROLE_INACTIF' in expediteur.roles ? 'utilisateur inactif' : 'expéditeur' %}
                        <tr class="bg-white border-b ">
                            <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                {{ expediteur.client ? expediteur.client.raisonSociale : 'Non défini' }}
                            </td>
                            <td class="px-6 py-4">
                                <a href="{{ path('app_detailsExpediteur', {expediteurId:expediteur.id}) }}">{{ expediteur.email }}</a>
                            </td>
                            <td class="px-6 py-4">
                                {{ expediteur.nom }}
                            </td>
                            <td class="px-6 py-4">
                                {{ expediteur.prenom }}
                            </td>
                            <td class="px-6 py-4">
                                {{ role }}
                            </td>
                            <td class="px-6 py-4">
                                <a class="text-blue-800 bg-blue-100 p-2 rounded" href="{{ path('app_editExpediteur', {id: expediteur.id}) }}">
                                    Modifier
                                </a>
                            </td>
                            <td class="px-6 py-4">
                                {{ include('expediteur/_delete_form.html.twig') }}
                            </td>
                            <td class="px-6 py-4">
                                <a href="{{ path('app_activateExpediteur', {expediteurId: expediteur.id}) }}" class="text-blue-800 bg-blue-100 p-2 rounded">Activer</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </section>
            
        </details>
    </div>
    {% endif %}
    {% endif %}
    {% if isSearch != null ? true : false %}
            <a href="{{ path('app_expediteur') }}" class="text-white bg-[#F24E1E] p-2 rounded">Annuler recherche</a>
    {% endif %}
    <section id="inactif-box" class="flex justify-between items-center m-2">
        <form class="flex">
            <div class="mb-3 xl:w-50">
                <div class="input-group relative flex flex-wrap items-stretch w-full mb-4 ">
                    <label for="Recherche" class="text-black opacity-50 italic"> Recherche par nom/entreprise</label>
                    <input name="recherche" type="search" class="form-control relative flex-auto min-w-0 block w-full px-3 py-1.5 
                        text-base font-normal text-gray-700 bg-white bg-clip-padding border 
                        border-solid border-gray-300 rounded transition ease-in-out m-0 
                        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                        placeholder="" aria-label="" aria-describedby="button-addon2">
                </div>
                <label style="padding-right: 2%;" for="checkbox">recherche exacte</label>
                    <input type="checkbox" name="checkBoxExact" id="checkbox">
            </div>
        </form>
        <div>
            <a class="text-white bg-[#F24E1E] p-2 rounded" href="{{ path('app_accueil') }}">Retour</a>
            <a class="text-white bg-[#24A640] p-2 rounded" href="{{ path('app_addExpediteur') }}">Ajouter</a>
        </div>
    </section>
    <section class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 table-fixed">
            <thead class="text-xs text-white uppercase bg-[#140A82]">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Raison client
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Email
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Nom / Entreprise
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Prenom / Service
                    </th>
                    <th scope="col" class="px-6 py-3">
                        role
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Modifier
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Supprimer
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for expediteur in expediteurs %}
                {% set role = 'ROLE_INACTIF' in expediteur.roles ? 'utilisateur inactif' : 'expéditeur' %}
                {% if role == 'expéditeur' %}
                <tr class="bg-white border-b ">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                        {{ expediteur.client ? expediteur.client.raisonSociale : 'Non défini' }}
                    </th>
                    <td class="px-6 py-4">
                        <a href="{{ path('app_detailsExpediteur', {expediteurId:expediteur.id}) }}">{{ expediteur.email }}</a>
                    </td>
                    <td class="px-6 py-4">
                        {{ expediteur.nom }}
                    </td>
                    <td class="px-6 py-4">
                        {{ expediteur.prenom }}
                    </td>
                    <td class="px-6 py-4">
                        {{ role }}
                    </td>
                    <td class="px-6 py-4">
                        <a class="text-blue-800 bg-blue-100 p-2 rounded" href="{{ path('app_editExpediteur', {id: expediteur.id}) }}">
                            Modifier
                        </a>
                    </td>
                    <td class="px-6 py-4">
                        {{ include('expediteur/_delete_form.html.twig') }}
                    </td>
                </tr>
                {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </section>
    <div class="flex justify-center mt-4">
        {{ knp_pagination_render(expediteurs) }}
    </div>
</main>
{% endblock %}