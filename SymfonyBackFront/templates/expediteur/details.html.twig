{% extends 'base.html.twig' %}

{% block body %}
<div class="absolute right-0 mx-10">
    <a class="text-white bg-[#F24E1E] p-2 rounded" href="{{ path('app_accueil') }}">Retour</a>
</div>
<h1 class=" mb-4 text-xl font-semibold text-[#140A82]">Détails de l'expéditeur</h1>
<div class="flex-col items-center space-x-10 space-y-5">
    <p class="py-5">Nom / Nom de l'entreprise : {{expediteur.nom}}</p>
    <p class="">Prénom / Service : {{expediteur.prenom ?? 'non défini'}} </p>
    <hr class="border-blue-900 border-1 absolute w-full right-0">
    <p class="pt-5">Adresse : {{ expediteur.adresse }}</p>
    <hr class="border-blue-900 border-1 absolute w-full right-0">
    <p class="pt-5">Complément d'adresse : {{ expediteur.complement }}</p>
    <hr class="border-blue-900 border-1 absolute w-full right-0">
    <p class="pt-5">Code Postal : {{ expediteur.codePostal }}</p>
    <hr class="border-blue-900 border-1 absolute w-full right-0">
    <p class="pt-5">Ville : {{ expediteur.ville }}</p>
    <hr class="border-blue-900 border-1 absolute w-full right-0">
    <p class="pt-5">Téléphone : {{ expediteur.telephone }}</p>
    <hr class="border-blue-900 border-1 absolute w-full right-0">
    <div class="pt-5">
        <h2>Destinataires :</h2>
        <div class="flex-row w-50">
        {% for destinataire in expediteur.destinataires %}
            <div class="flex items-center m-5">
                <svg class="w-5" xmlns="http://www.w3.org/2000/svg" width="43.36" height="43.36" viewBox="0 0 43.36 43.36">
                    <g id="Calque_2" data-name="Calque 2">
                    <g id="Calque_1-2" data-name="Calque 1">
                        <g id="FlecheDCercle">
                        <g id="FlecheG4">
                            <path id="Tracé_519" data-name="Tracé 519" d="M17.13,6.86a1.59,1.59,0,0,1,1.16.48L31.45,20.49a1.67,1.67,0,0,1,0,2.33L18.29,36a1.65,1.65,0,1,1-2.42-2.23l.1-.09,12-12-12-12a1.66,1.66,0,0,1,0-2.32A1.61,1.61,0,0,1,17.13,6.86Z" style="fill: #140a82"/>
                        </g>
                        <path id="Tracé_1162" data-name="Tracé 1162" d="M21.68,0A21.68,21.68,0,1,1,0,21.68,21.68,21.68,0,0,1,21.68,0Zm0,39.69a18,18,0,1,0-18-18h0A18,18,0,0,0,21.68,39.69Z" style="fill: #140a82"/>
                        </g>
                    </g>
                    </g>
                </svg>
                <p class="px-4">{{ destinataire.nom }} {{ destinataire.prenom }}</p>
            </div>
        {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
